# ========================================================================
# ComfortNest Property Rental Application - Environment Configuration Template
# ========================================================================
#
# This is a template file for environment variables. Copy this file to .env
# and update the values according to your environment setup.
#
# INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Update the values in .env with your actual configuration
# 3. Never commit .env file to version control
#
# @author ComfortNest Development Team
# @version 1.0.0
# ========================================================================

# ======== SERVER CONFIGURATION ========
# Port number for the Express server to listen on
PORT=5000

# Node.js environment (development, production, test)
NODE_ENV=development

# ======== DATABASE CONFIGURATION ========
# MongoDB connection string
# Local: mongodb://localhost:27017/property-rental-db
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/property-rental-db
MONGO_URI=mongodb://localhost:27017/property-rental-db

# ======== JWT AUTHENTICATION CONFIGURATION ========
# Secret key for signing JWT tokens (CHANGE THIS!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here

# JWT token expiration time (1h, 24h, 7d, 30d)
JWT_EXPIRE=7d

# ======== EMAIL CONFIGURATION (EmailJS) ========
# EmailJS service configuration
# Get from: https://www.emailjs.com/
EMAILJS_SERVICE_ID=service_your_id
EMAILJS_TEMPLATE_ID=template_your_id
EMAILJS_USER_ID=your_user_id

# ======== FILE UPLOAD CONFIGURATION ========
# Maximum file size for uploads (bytes)
MAX_FILE_SIZE=10485760

# Maximum files per upload
MAX_FILES_PER_UPLOAD=5

# Upload directory
UPLOAD_DIR=uploads/property-images

# ======== SECURITY CONFIGURATION ========
# CORS allowed origins
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Session secret
SESSION_SECRET=your_session_secret_here

# ======== APPLICATION CONFIGURATION ========
# Application details
APP_NAME=ComfortNest
APP_URL=http://localhost:5000
CONTACT_EMAIL=comfortnestproject@gmail.com
SUPPORT_PHONE=+923239140684

# ======== ADMIN CONFIGURATION ========
# Default admin user (CHANGE IN PRODUCTION!)
DEFAULT_ADMIN_EMAIL=comfortnestproject@gmail.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Admin
DEFAULT_ADMIN_PHONE=+923239140684

# ======== LOGGING CONFIGURATION ========
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
